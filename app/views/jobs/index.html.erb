<% provide(:title, 'All jobs') %>
<h1>Jobs</h1>
<table class="table" id="jobs">
  <tr>
    <th>Name</th>
    <th>Duration</th>
    <th>FEZ</th>
    <th>SEZ</th>
    <th>Begin</th>
    <th>End</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.duration %></td>
        <td><%= job.fez %></td>
        <td><%= job.sez %></td>
        <td><%= job.begin %></td>
        <td><%= job.end %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Update', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'Create a new Job', new_job_path %><br> <br>
<%= link_to  'Back', current_user %>