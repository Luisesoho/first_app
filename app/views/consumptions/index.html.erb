<h1>Consumptions</h1>
<table class="table" id="consumptions">
  <tr>
    <th>Job</th>
    <th>Ressource</th>
    <th>Consumption</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @consumptions.each do |consumption| %>
      <tr>
        <td><%= consumption.job.name %></td>
        <td><%= consumption.resource.name %></td>
        <td><%= consumption.consumption %></td>
        <td><%= link_to 'Show', consumption %></td>
        <td><%= link_to 'Update', edit_consumption_path(consumption) %></td>
        <td><%= link_to 'Destroy', consumption, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

