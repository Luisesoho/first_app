<h1>Index of Resources</h1>
<table class="table" id="resources">
  <tr>
    <th>Name</th>
    <th>Capacity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= resource.capacity %></td>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Update', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

